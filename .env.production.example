# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# AWS Deployment Configuration
# ============================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
API_VERSION=v1

# MongoDB Configuration (AWS DocumentDB or MongoDB Atlas)
# For AWS DocumentDB:
# MONGODB_URI=mongodb://username:password@docdb-cluster.cluster-xxxxx.us-east-1.docdb.amazonaws.com:27017/vendor_management?tls=true&tlsCAFile=rds-combined-ca-bundle.pem&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
# For MongoDB Atlas:
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/vendor_management?retryWrites=true&w=majority
MONGODB_DB_NAME=vendor_management

# JWT Configuration
# IMPORTANT: Generate strong secrets using: openssl rand -base64 64
JWT_SECRET=your_production_jwt_secret_min_32_characters_long_use_openssl_rand_base64_64
JWT_REFRESH_SECRET=your_production_refresh_secret_min_32_characters_long_use_openssl_rand_base64_64
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_S3_BUCKET=1099-vendor-management-uploads
AWS_S3_BUCKET_REGION=us-east-1

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# CORS Configuration
# Add your frontend domain(s)
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration (AWS SES)
EMAIL_FROM=noreply@yourdomain.com
AWS_SES_REGION=us-east-1
EMAIL_ENABLED=true

# SMS Configuration (AWS SNS - Optional)
AWS_SNS_REGION=us-east-1
SMS_ENABLED=false

# Redis Configuration (AWS ElastiCache - for session management)
REDIS_HOST=your-redis-cluster.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=true

# Application URLs
APP_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Health Check
HEALTH_CHECK_ENABLED=true

# Monitoring (AWS CloudWatch)
CLOUDWATCH_ENABLED=true
CLOUDWATCH_LOG_GROUP=/aws/elasticbeanstalk/1099-vendor-api/production
CLOUDWATCH_LOG_STREAM=application-logs

# Error Tracking (Optional - Sentry)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_LOGS=false
ENABLE_RATE_LIMITING=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Session Configuration
SESSION_SECRET=your_session_secret_min_32_characters_long
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# API Keys (if needed for external services)
SERVICEPOWER_API_TOKEN=your_servicepower_token
SERVICEPOWER_BASE_URL=https://broker.servicepower.com/proxy/serviceOrder/api/v1/work-orders
SERVICEPOWER_TENANT_ID=your_tenant_id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=1099-vendor-management-backups

# SSL/TLS
SSL_ENABLED=true
FORCE_HTTPS=true

# Timezone
TZ=America/New_York
